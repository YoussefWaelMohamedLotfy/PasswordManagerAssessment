@using Microsoft.AspNetCore.Authentication
@{
    ViewData["Title"] = "User Claims";
}

<h1>@ViewData["Title"]</h1>
<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h2>Properties</h2>
<dl>
    @foreach (var item in (await Context.AuthenticateAsync()).Properties!.Items)
    {
        <dt>@item.Key</dt>
        <dd>@item.Value</dd>
    }
</dl>