@model CredentialUpsertVM
@{
    ViewData["Title"] = "Add Credential";
}

<form method="post" asp-action="Upsert">
    @if (Model.Credential.ID != 0)
    {
        ViewData["Title"] = "Edit Credential";
        <input asp-for="Credential.ID" hidden />
    }

    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">@ViewData["Title"]</h2>
        </div>
        <div class="col-8">
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Credential.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Credential.Name" class="form-control" />
                    <span asp-validation-for="Credential.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Credential.AccountUsername"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Credential.AccountUsername" class="form-control" />
                    <span asp-validation-for="Credential.AccountUsername" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Credential.AccountPassword"></label>
                </div>
                <div class="col-8">
                    <input type="password" asp-for="Credential.AccountPassword" class="form-control" />
                    <span asp-validation-for="Credential.AccountPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-check">
                <label asp-for="Credential.IsActive" class="form-check-label"></label>
                <input asp-for="Credential.IsActive" class="form-check-input" type="checkbox">
            </div>
            <div class="form-group row py-2">
                <div class="col-8 offset-4 row">
                    <div class="col">
                        @if (Model.Credential.ID != 0)
                        {
                            // Update
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        }
                        else
                        {
                            // Create
                            <input type="submit" class="btn btn-primary w-100" value="Create" />
                        }
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-secondary w-100"><i class="bi bi-box-arrow-left"></i> Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>